PORT=4000

# 数据库：生产环境必须设置 DATABASE_URL
# - Railway：关联 PostgreSQL 后自动注入，或从 Postgres 服务 Variables 复制
# - 阿里云 RDS：迁移后改为阿里云连接串，见 Railway数据库迁移到阿里云.md
# DATABASE_URL=postgresql://user:password@host:5432/dbname
# 使用 SSL 时（Railway / 阿里云 RDS 常见）：DB_SSL=true
DB_HOST=127.0.0.1
DB_PORT=5432
DB_USER=postgres
DB_PASS=postgres
DB_NAME=venues

# JWT配置
JWT_SECRET=your_jwt_secret_key_change_this_in_production

# 阿里云OSS配置（可选）
OSS_REGION=oss-cn-hangzhou
OSS_ACCESS_KEY_ID=your_access_key_id
OSS_ACCESS_KEY_SECRET=your_access_key_secret
OSS_BUCKET=venues-images
OSS_HOTLINK_SECRET=your_hotlink_secret_key
